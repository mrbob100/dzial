{% extends '::base.html.twig' %}

{% block content -%}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-9 slon container-fluid">
    <h1>Product</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Names&nbsp;&nbsp;</th>
                <td>{{ entity.names }}</td>
            </tr>
            <tr>
                <th>Price&nbsp;&nbsp;</th>
                <td>{{ entity.price }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('vl_product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('vl_product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
        </div>
    </div>
</div>

{% endblock %}
